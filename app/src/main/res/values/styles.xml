<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#181818</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#FFFFFF</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#181818</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="titleTextColor">#000000</item>
    </style>

    <style name="todo_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="todo_info_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <color name="background">#121212</color>

</resources>
